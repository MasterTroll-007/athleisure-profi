# Database
DATABASE_URL=jdbc:postgresql://localhost:5433/fitness
DATABASE_USER=fitness
DATABASE_PASSWORD=your-secure-database-password

# JWT - REQUIRED, generate with: openssl rand -base64 64
JWT_SECRET=your-256-bit-secret-key-generate-with-openssl

# SMTP (Gmail) - for email verification
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password

# App URL (for email verification links)
APP_BASE_URL=https://your-domain.com

# CORS - allowed origins (comma-separated)
CORS_ORIGINS=https://your-domain.com

# Logging level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# GoPay (payment gateway)
# Register at: https://registration.gopay.com/sandbox (sandbox)
# or https://registration.gopay.com (production)
GOPAY_CLIENT_ID=your-gopay-client-id
GOPAY_CLIENT_SECRET=your-gopay-client-secret
GOPAY_GOID=your-gopay-merchant-id
GOPAY_IS_PRODUCTION=false
# Optional: Override default return/notification URLs
# GOPAY_RETURN_URL=https://your-domain.com/credits?payment=complete
# GOPAY_NOTIFICATION_URL=https://your-domain.com/api/gopay/webhook
